<h1>SIGN UP</h1>

<% if @user.errors.any?%>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li>
      <%= message%>
    </li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @user do |form|%>
  <div>
    <%= form.label :email%>   
    <%= form.email_field :email%>
  </div>
  <div>
    <%= form.label :password, "密碼"%>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :password_confrimation, "密碼確認" %>
    <%= form.password_field :password_confrimation %>
  </div>
  <%= form.submit%>
<% end %>